{
  "name": "@sonill/nepali-dates",
  "version": "1.0.2",
  "description": "Community-driven, accurate Nepali calendar data and conversion utilities",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "data",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "validate-data": "tsx scripts/validate-data.ts",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "nepali",
    "calendar",
    "bikram-sambat",
    "bs",
    "ad",
    "date",
    "conversion",
    "nepal",
    "nepali-calendar"
  ],
  "author": "Community Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonill/nepali-dates.git"
  },
  "bugs": {
    "url": "https://github.com/sonill/nepali-dates/issues"
  },
  "homepage": "https://sonill.github.io/nepali-dates",
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  }
}
